<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="~/Scripts/modernizr-2.8.3.js" type="text/javascript"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.7.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>
<body>
    <header class="row col-md-12 FullContent">
      
        <div class="d-block px-3 py-2 text-center text-bold text-white old-bv">
            @Html.Partial("_TopMenu")
        </div>
    </header>
    <div class="row col-md-12 FullContent">
        <div class="col-md-2 CustomLeftnavbar" style="background-color:gainsboro">
            @{Html.RenderPartial("~/Views/Shared/_LeftMenu.cshtml");}
        </div>
        <div class="container col-md-10" style="background-color:ivory">
            <main role="main" class="CustomBody">
                @RenderBody()
            </main>

        </div>
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>



</body>
</html>